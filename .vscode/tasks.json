{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start All Servers",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "type": "shell",
            "command": "pwsh",
            "args": [
                "-NoProfile",
                "-Command",
                "& '${workspaceFolder}/scripts/manage_servers.ps1' -Action 'start-all'"
            ],
            "isBackground": false,
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "group": "servers"
            }
        },
        {
            "label": "Stop All Servers",
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "type": "shell",
            "command": "pwsh",
            "args": [
                "-NoProfile",
                "-Command",
                "& '${workspaceFolder}/scripts/manage_servers.ps1' -Action 'stop-all'"
            ],
            "isBackground": false,
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "group": "servers"
            }
        },
        {
            "label": "Start Llama.cpp Server",
            "type": "shell",
            "command": "pwsh",
            "args": [
                "-NoProfile",
                "-Command",
                "& '${workspaceFolder}/scripts/manage_servers.ps1' -Action 'start-llama'"
            ],
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "group": "servers"
            }
        },
        {
            "label": "Stop Llama.cpp Server",
