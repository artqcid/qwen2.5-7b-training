        },
        {
            "label": "Start Embedding Server",
            "type": "shell",
            "command": "pwsh",
            "args": [
                "-NoProfile",
                "-Command",
                "& '${workspaceFolder}/scripts/manage_servers.ps1' -Action 'start-embedding'"
            ],
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "group": "servers"
            }
