        },
        {
            "label": "Start MCP Server",
            "type": "shell",
            "command": "pwsh",
            "args": [
                "-NoProfile",
                "-Command",
                "& '${workspaceFolder}/scripts/start_mcp_server.ps1'"
            ],
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "group": "servers"
            }
        },
        {
            "label": "Stop MCP Server",
            "type": "shell",
            "command": "pwsh",
            "args": [
                "-NoProfile",
                "-Command",
                "Get-Process -Name 'python' -ErrorAction SilentlyContinue | Where-Object {$_.CommandLine -like '*mcp_server*'} | Stop-Process -Force"
            ],
            "isBackground": false,
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "group": "servers"
            }
        },
        {
            "label": "Show Server Status",
            "type": "shell",
            "command": "pwsh",
            "args": [
                "-NoProfile",
                "-Command",
                "& '${workspaceFolder}/scripts/manage_servers.ps1' -Action 'status'"
